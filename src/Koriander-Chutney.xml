<recipeml version="0.5">
  <recipe>
    <head>
      <title>Koriander-Chutney</title>
    </head>    
    <yield>
		<qty>2</qty>
		<unit>Person</unit>
	</yield>
    <ingredients>
	  <ing> <qty>100</qty> <unit>g</unit> <item>Koriander</item> </ing>
	  <ing> <qty>60</qty> <unit>g</unit> <item>Erdnüsse, ungesalzen</item> </ing>
	  <ing> <qty>4</qty> <unit>EL</unit> <item>Zitronensaft</item> </ing>
	  <ing> <qty>1</qty> <unit>TL</unit> <item>Salz</item> </ing>
	  <ing> <qty>4</qty> <unit>TL</unit> <item>Zucker, braun</item> </ing>
	  <ing> <qty>1/2</qty> <unit>TL</unit> <item>Kurkuma</item> </ing>
	  <ing> <qty>2-3</qty> <unit></unit> <item>Chili, grün</item> </ing>
    </ingredients>
    <directions>
      <step>100g Koriander grob hacken, mit 60g Erdnüssen, 4 EL Zitronensaft, 4 TL brauner Zucker, 1 TL Salz, 1/2 Kurkuma, 2-3 Chili zu einem Pesto pürrieren. </step>
    </directions>
  </recipe>
</recipeml>

