<recipeml version="0.5">
  <recipe>
    <head>
      <title>Fondont au chocolat</title>
    </head>    
    <yield>
		<qty>2</qty>
		<unit>Person</unit>
	</yield>
    <ingredients>
	  <ing> <qty>1</qty> <unit>EL</unit> <item>Mehl</item> </ing>
	  <ing> <qty>200</qty> <unit>g</unit> <item>Butter</item> </ing>
	  <ing> <qty>200</qty> <unit>g</unit> <item>Schokolade, zartbitter</item> </ing>
	  <ing> <qty>4</qty> <unit></unit> <item>Eier</item> </ing>
	  <ing> <qty>150</qty> <unit>g</unit> <item>Zucker</item> </ing>
    </ingredients>
    <directions>
	  <step>200g Butter und 200g Schokolade im Wasserbad schmelzen.</step>
	  <step>4 Eier und 150g Zucker schaumig schlagen, 1 EL Mehl dazu geben. Schokolade unterrühren.</step>
      <step>Für 20-30 Minuten bei 200 Grad backen.</step>
    </directions>
	<tags>
		<tag>französisch</tag>
		<rag>Kuchen</rag>
	</tags>
  </recipe>
</recipeml>

