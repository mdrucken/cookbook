<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="rezept.xsl"?>
<recipeml version="0.5">
  <recipe>
    <head>
      <title>Classic BBQ Sauce</title>
    </head>    
    <yield>
		<qty>1</qty>
		<unit>Person</unit>
	</yield>
    <ingredients>
	  <ing> <qty>4</qty> <unit>EL</unit> <item>Ahornsirup</item> </ing>
    <ing> <qty>2</qty> <unit></unit> <item>Zwiebeln, gewürfelt</item> </ing>
    <ing> <qty>2</qty> <unit>Zehen</unit> <item>Knoblauch, gewürfelt</item> </ing>
    <ing> <qty>1</qty> <unit>EL</unit> <item>Tomatenmark</item> </ing>
    <ing> <qty>1</qty> <unit>TL</unit> <item>Paprikapulver, edelsüß</item> </ing>
    <ing> <qty>1</qty> <unit>TL</unit> <item>Zwiebelpulver</item> </ing>
    <ing> <qty>150</qty> <unit>ml</unit> <item>Malzbier</item> </ing>
    <ing> <qty>25</qty> <unit>ml</unit> <item>Aceto balsamico</item> </ing>
    <ing> <qty></qty> <unit></unit> <item>Meersalz</item> </ing>
    <ing> <qty></qty> <unit></unit> <item>Pfeffer, schwarz</item> </ing>
    <ing> <qty>50</qty> <unit>g</unit> <item>Tomatenketchup</item> </ing>
    </ingredients>
    <directions>
      <step>Ahornsirup erhitzen und darin Zwiebeln und Knoblauch glasig anschwitzen.</step>
      <step>Tomatenmark, Paprikapulver und Zwiebelpulver einrühren.</step>
      <step>Mit Malzbier ablöschen.</step>
      <step>Aceto balsamico zugeben und bei mittlerer Temperatur sirupartig einkochen lassen.</step>
      <step>Mit Salz und Pfeffer abschmecken.</step>
      <step>Tomatenketchup einrühren.</step>
    </directions>
	<tags>
		<tag></tag>
	</tags>
  </recipe>
</recipeml>

