<recipeml version="0.5">
  <recipe>
    <head>
	  <!--cSpell:words salmone -->
      <title>Tagliatelle al Salmone</title>
    </head>    
    <yield>
		<qty>2</qty>
		<unit>Person</unit>
	</yield>
    <ingredients>
	  <ing> <qty>250</qty> <unit>g</unit> <item>Tagliatelle</item> </ing>
	  <ing> <qty>125</qty> <unit>g</unit> <item>Lachs</item> </ing>
	  <ing> <qty>1</qty> <unit></unit> <item>Schalotte</item> </ing>
	  <ing> <qty>1</qty> <unit>Zehe</unit> <item>Knoblauch</item> </ing>
	  <ing> <qty>100</qty> <unit>ml</unit> <item>Sahne</item> </ing>
	  <ing> <qty>100</qty> <unit>ml</unit> <item>Weißwein, trocken</item> </ing>
	  <ing> <qty>100</qty> <unit>ml</unit> <item>Gemüsebrühe</item> </ing>
	  <ing> <qty>200</qty> <unit>g</unit> <item>Tomaten, stückig</item> </ing>
	  <ing> <qty>1</qty> <unit>TL</unit> <item>Tomatenmark</item> </ing>
	  <ing> <qty>1/2</qty> <unit></unit> <item>Limette</item> </ing>
	  <ing> <qty>1/2</qty> <unit>TL</unit> <item>Dill</item> </ing>
	  <ing> <qty>1</qty> <unit>EL</unit> <item>Petersilie</item> </ing>
	  <ing> <qty>1</qty> <unit>EL</unit> <item>Olivenöl</item> </ing>
	  <ing> <qty></qty> <unit></unit> <item>Salz</item> </ing>
	  <ing> <qty></qty> <unit></unit> <item>Pfeffer</item> </ing>
    </ingredients>
    <directions>
      <step>Lachs würfeln, in 2 EL Olivenöl kurz anbraten</step>
	  <step>Schalotte und Knoblauch kurz anschwitzen, mit Weißwein ablöschen.</step>
	  <step>Wein zur Hälfte reduzieren, Gemüsebrühe zugeben und 5 Minuten köcheln.</step>
	  <step>Tomaten und Tomatenmark beifügen, mit Salz, Pfeffer, Limettensaft abschmecken.</step>
	  <step>Eine Zehe Knoblauch hineinpressen, 5 Minuten kochen lassen.</step>
	  <step>Sahne darüber gießen und Lachs in die Soße geben.</step>
	  <step>Kurz aufkochen und dann die Tagliatelle dazugeben.</step>
	  <step>Mit Petersilie und Dill bestreuen.</step>
    </directions>
  </recipe>
</recipeml>

