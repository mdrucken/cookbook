<recipeml version="0.5">
  <recipe>
    <head>
      <title>Pfannkuchen</title>
    </head>    
    <yield>
		<qty>2</qty>
		<unit>Person</unit>
	</yield>
    <ingredients>
	  <ing> <qty>4</qty> <unit></unit> <item>Ei</item> </ing>
	  <ing> <qty>2</qty> <unit>EL</unit> <item>Zucker</item> </ing>
	  <ing> <qty>400</qty> <unit>ml</unit> <item>Milch</item> </ing>
	  <ing> <qty>1</qty> <unit>Prise</unit> <item>Salz</item> </ing>
	  <ing> <qty>200</qty> <unit>g</unit> <item>Mehl</item> </ing>
	  <ing> <qty>1</qty> <unit>Messerspitze</unit> <item>Backpulver</item> </ing>
	  <ing> <qty></qty> <unit></unit> <item>Öl</item> </ing>
    </ingredients>
    <directions>
      <step>4 Eier mit 2 EL Zucker schaumig schlagen, mit Milch verrühren.</step>
	  <step>Salz, Mehl und Backpulver dazugeben.</step>
	  <step>Teig 15 Minuten ruhen lassen.</step>
	  <step>In der Pfanne ausbacken.</step>
    </directions>
  </recipe>
</recipeml>

