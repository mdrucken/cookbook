<recipeml version="0.5">
  <recipe>
    <head>
      <title>Bauernauflauf mit Bratwürsten</title>
    </head>    
    <yield>
		<qty>2</qty>
		<unit>Person</unit>
	</yield>
    <ingredients>
	  <ing> <qty>4</qty> <unit></unit> <item>Kartoffeln</item> </ing>
	  <ing> <qty>300</qty> <unit>g</unit> <item>Bratwurst</item> </ing>
	  <ing> <qty>1</qty> <unit></unit> <item>Zwiebel</item> </ing>
	  <ing> <qty>1</qty> <unit></unit> <item>Paprika, rot</item> </ing>
	  <ing> <qty>200</qty> <unit>g</unit> <item>Brokkoli</item> </ing>
	  <ing> <qty>2</qty> <unit></unit> <item>Eier</item> </ing>
	  <ing> <qty>200</qty> <unit>ml</unit> <item>Milch</item> </ing>
	  <ing> <qty>2</qty> <unit>EL</unit> <item>Öl</item> </ing>
	  <ing> <qty>1</qty> <unit>TL</unit> <item>Majoran</item> </ing>
	  <ing> <qty></qty> <unit></unit> <item>Kümmel</item> </ing>
	  <ing> <qty></qty> <unit></unit> <item>Salz</item> </ing>
	  <ing> <qty></qty> <unit></unit> <item>Pfeffer</item> </ing>
	  <ing> <qty></qty> <unit></unit> <item>Paprika, edelsüß</item> </ing>
    </ingredients>
    <directions>
      <step>Kartoffeln kochen, würfeln.</step>
	  <step>Bratwurst anbraten, in Scheiben schneiden und nochmals anbraten.</step>
	  <step>Brokkoli gar kochen.</step>
	  <step>Kartoffelwürfel zu den Würstchen geben, mit den Gewürzen abschmecken.</step>
	  <step>Zwiebel und Paprika hinzufügen und 3 Minuten garen.</step>
	  <step>Massen in die Auflaufform füllen. Eier und Milch verrühren, mit Salz, Pfeffer und Paprika würzen, über die Masse geben.</step>
	  <step>30 Minuten backen.</step>
    </directions>
	<tags>
		<tag></tag>
	</tags>
  </recipe>
</recipeml>

